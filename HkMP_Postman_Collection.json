{
  "info": {
    "name": "HkMP Backend",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Collection για HkMP backend: /items, /history",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://your-app.onrender.com",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get Items",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/items",
          "host": ["{{BASE_URL}}"],
          "path": ["items"]
        }
      }
    },
    {
      "name": "Add Item",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"Test item\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/items",
          "host": ["{{BASE_URL}}"],
          "path": ["items"]
        }
      }
    },
    {
      "name": "Delete Item",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/items/1",
          "host": ["{{BASE_URL}}"],
          "path": ["items", "1"]
        }
      }
    },
    {
      "name": "Get History",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/history",
          "host": ["{{BASE_URL}}"],
          "path": ["history"]
        }
      }
    }
  ]
}
